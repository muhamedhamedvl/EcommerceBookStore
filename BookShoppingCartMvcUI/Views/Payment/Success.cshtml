@using BookShoppingCartMvcUI.Models.ViewModel
@model PaymentSuccessViewModel
@{
    ViewData["Title"] = "Payment Successful";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="text-center">Payment Successful</h3>
                </div>
                <div class="card-body text-center">
                    <i class="fas fa-check-circle fa-5x text-success mb-4"></i>
                    <h4>Thank you for your order!</h4>

                    @if (Model != null)
                    {
                        <p>We've sent a confirmation email to You</p>

                        <div class="text-left mt-4">
                            <h5>Order Details</h5>
                            <div class="d-flex justify-content-between">
                                <span>Payment ID:</span>
                                <span>@Model.PaymentId</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Date:</span>
                                <span>@Model.Created.ToString("MMMM dd, yyyy HH:mm")</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Total Paid:</span>
                                <span>@Model.AmountPaid.ToString("C") @Model.Currency</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mt-4">
                            Payment details could not be retrieved
                        </div>
                    }

                    <a href="/" class="btn btn-primary mt-4">Continue Shopping</a>
                </div>
            </div>
        </div>
    </div>
</div>