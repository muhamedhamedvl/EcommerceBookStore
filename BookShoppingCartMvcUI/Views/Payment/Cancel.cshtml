@{
    ViewData["Title"] = "Payment Cancelled";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h3 class="text-center">Payment Cancelled</h3>
                </div>
                <div class="card-body text-center">
                    <i class="fas fa-times-circle fa-5x text-warning mb-4"></i>
                    <h4>Your payment was cancelled</h4>
                    <p>You haven't been charged. You can try again if you want.</p>
                    <a href="/Payment/Pay" class="btn btn-primary mt-3">Try Again</a>
                </div>
            </div>
        </div>
    </div>
</div>